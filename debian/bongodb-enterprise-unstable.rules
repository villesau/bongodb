#!/usr/bin/make -f
# -*- makefile -*-
TOOLS=bsondump bongodecrypt bongodump bongoexport bongofiles bongoimport bongoldap bongooplog bongoperf bongorestore bongostat bongotop

# Uncomment this to turn on verbose mode.
export DH_VERBOSE=1


configure: configure-stamp
configure-stamp:
	dh_testdir

	touch configure-stamp


build: build-stamp

build-stamp: configure-stamp  
	dh_testdir

	# THE FOLLOWING LINE IS INTENTIONALLY COMMENTED. 
	# scons 
	#docbook-to-man debian/bongodb.sgml > bongodb.1

	echo -n > debian/bongodb-enterprise-unstable-tools.manpages
	for binary in ${TOOLS} ; \
	do \
		if [ -e debian/$$binary.1 ] ; \
		then \
			echo debian/$$binary.1 >> debian/bongodb-enterprise-tools.manpages ; \
		fi ; \
	done

	echo debian/bongo.1 > debian/bongodb-enterprise-unstable-shell.manpages
	echo debian/bongod.1 > debian/bongodb-enterprise-unstable-server.manpages
	echo debian/bongos.1 > debian/bongodb-enterprise-unstable-bongos.manpages

	touch $@

clean: 
	dh_testdir
	dh_testroot
	rm -f build-stamp configure-stamp

	# FIXME: scons freaks out at the presence of target files
	# under debian/bongodb.
	#scons -c

	rm -f debian/*.manpages

	rm -rf $(CURDIR)/debian/bongodb-enterprise-unstable
	rm -rf $(CURDIR)/debian/bongodb-enterprise-unstable-shell
	rm -rf $(CURDIR)/debian/bongodb-enterprise-unstable-server
	rm -rf $(CURDIR)/debian/bongodb-enterprise-unstable-bongos
	rm -rf $(CURDIR)/debian/bongodb-enterprise-unstable-tools
	rm -f config.log
	rm -f bongo
	rm -f bongod
	rm -f bongoimportjson
	rm -f bongoexport
	rm -f bongorestore
	rm -f bongodump
	rm -f bongofiles
	rm -f .sconsign.dblite
	rm -f libbongoclient.a
	rm -rf client/*.o
	rm -rf tools/*.o
	rm -rf shell/*.o
	rm -rf .sconf_temp
	rm -f buildscripts/*.pyc 
	rm -f *.pyc
	rm -f buildinfo.cpp
	dh_clean debian/files

install: build
	dh_testdir
	dh_testroot
	dh_prep
	dh_installdirs

	# THE FOLLOWING LINE IS INTENTIONALLY COMMENTED.
	# scons --prefix=$(CURDIR)/debian/bongodb/usr install
	mkdir -p $(CURDIR)/debian/bongodb-enterprise-unstable-shell/usr/bin
	mkdir -p $(CURDIR)/debian/bongodb-enterprise-unstable-server/usr/bin
	mkdir -p $(CURDIR)/debian/bongodb-enterprise-unstable-bongos/usr/bin
	mkdir -p $(CURDIR)/debian/bongodb-enterprise-unstable-tools/usr/bin
	cp -v $(CURDIR)/bin/bongo $(CURDIR)/debian/bongodb-enterprise-unstable-shell/usr/bin
	cp -v $(CURDIR)/bin/bongod $(CURDIR)/debian/bongodb-enterprise-unstable-server/usr/bin
	cp -v $(CURDIR)/bin/bongos $(CURDIR)/debian/bongodb-enterprise-unstable-bongos/usr/bin

	for binary in ${TOOLS} ; \
	do \
	  cp -v $(CURDIR)/bin/$$binary $(CURDIR)/debian/bongodb-enterprise-unstable-tools/usr/bin ; \
	done

	mkdir -p $(CURDIR)/debian/bongodb-enterprise-unstable-server/etc
	cp $(CURDIR)/debian/bongod.conf $(CURDIR)/debian/bongodb-enterprise-unstable-server/etc/bongod.conf

	mkdir -p $(CURDIR)/debian/bongodb-enterprise-unstable-shell/usr/share/lintian/overrides/
	mkdir -p $(CURDIR)/debian/bongodb-enterprise-unstable-server/usr/share/lintian/overrides/
	mkdir -p $(CURDIR)/debian/bongodb-enterprise-unstable-bongos/usr/share/lintian/overrides/
	mkdir -p $(CURDIR)/debian/bongodb-enterprise-unstable-tools/usr/share/lintian/overrides/
	install -m 644 $(CURDIR)/debian/lintian-overrides 		$(CURDIR)/debian/bongodb-enterprise-unstable-shell/usr/share/lintian/overrides/bongodb-enterprise-unstable-shell
	install -m 644 $(CURDIR)/debian/lintian-overrides 		$(CURDIR)/debian/bongodb-enterprise-unstable-server/usr/share/lintian/overrides/bongodb-enterprise-unstable-server
	install -m 644 $(CURDIR)/debian/lintian-overrides 		$(CURDIR)/debian/bongodb-enterprise-unstable-bongos/usr/share/lintian/overrides/bongodb-enterprise-unstable-bongos
	install -m 644 $(CURDIR)/debian/lintian-overrides 		$(CURDIR)/debian/bongodb-enterprise-unstable-tools/usr/share/lintian/overrides/bongodb-enterprise-unstable-tools

# Build architecture-independent files here.
binary-indep: build install
# We have nothing to do by default.

# Build architecture-dependent files here.
binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installchangelogs 
	dh_installdocs
	dh_installexamples
#	dh_install
#	dh_installmenu
#	dh_installdebconf	
#	dh_installlogrotate
#	dh_installemacsen
#	dh_installpam
#	dh_installmime
	dh_installinit -pbongodb-enterprise-unstable-server --name=bongod
#	dh_installinfo
	dh_installman
	dh_link
# Appears to be broken on Ubuntu 11.10...?
#	dh_strip
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
